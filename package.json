{
  "name": "smartlock-next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:deploy": "npm run pages:build && wrangler pages deploy .vercel/output/static",
    "db:migrate": "wrangler d1 execute smartlock-production --remote --file=./database/schema.sql",
    "db:seed": "wrangler d1 execute smartlock-production --remote --file=./database/seed.sql",
    "migrate:articles": "tsx scripts/migrate-articles.ts",
    "migrate:articles:run": "wrangler d1 execute smartlock-production --remote --file=./database/migrate-articles.sql"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@libsql/client": "^0.15.15",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "hono": "^4.10.6",
    "jose": "^5.2.0",
    "lucide-react": "^0.344.0",
    "marked": "^17.0.1",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "react-markdown": "^9.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "gray-matter": "^4.0.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "wrangler": "^3.114.0"
  }
}
